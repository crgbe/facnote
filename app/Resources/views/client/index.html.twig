{% extends 'base.html.twig' %}

{% block body %}
    <h1>Clients list</h1>
    <div>
        <a class="btn btn-primary btn-sm" href="{{ path('client_new') }}">new client</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Firstname</th>
            <th scope="col">Lastname</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ client.firstname }}</td>
                <td>{{ client.lastname }}</td>
                <td>{{ client.email }}</td>
                <td>{{ client.address }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('client_show', { 'id': client.id }) }}">show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('client_edit', { 'id': client.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
